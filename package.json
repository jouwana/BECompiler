{
	"name": "BEC",
	"displayName": "BetterErrorsCompiler",
	"description": "a better errors compiler for OCaml, based on \"Getting Into The Flow: Better Type Error Messages for Constraint-Based Type Inference          \" ",
	"version": "0.0.1",
	"icon": "./hammer.png",
	"engines": {
		"vscode": "^1.89.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished",
		"onLanguage:ocaml"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "BEC.compileWithOCaml",
				"title": "BE compile With OCaml TopLevel",
				"category": "BEC"
			},
			{
				"command": "BEC.compileWithUtop",
				"title": "BE compile With Utop TopLevel",
				"category": "BEC"
			}
		],
		"keybindings": [
			{
				"command": "BEC.compileWithOCaml",
				"key": "ctrl+alt+c",
				"mac": "cmd+opt+c",
				"when": "editorTextFocus"
			},
			{
				"command": "BEC.compileWithUtop",
				"key": "ctrl+alt+u",
				"mac": "cmd+opt+u",
				"when": "editorTextFocus"
			}
		],
		"configuration": {
			"title": "BEC",
			"properties": {
				"BEC.requestsThisMinute": {
					"type": "number",
					"default": -1,
					"description": "Number of requests made this minute"
				},
				"BEC.requestsPerDay": {
					"type": "number",
					"default": -1,
					"description": "Number of requests made today"
				},
				"BEC.lastResetDate": {
					"type": "string",
					"default": "",
					"description": "Timestamp of the last reset"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.6",
		"@types/node": "^20.12.12",
		"@types/vscode": "^1.89.0",
		"@typescript-eslint/eslint-plugin": "^7.9.0",
		"@typescript-eslint/parser": "^7.9.0",
		"@vscode/test-cli": "^0.0.9",
		"@vscode/test-electron": "^2.3.9",
		"eslint": "^8.57.0",
		"typescript": "^5.4.5"
	},
	"dependencies": {
		"@google/generative-ai": "^0.11.3",
		"node": "^20.13.1"
	}
}
