{
	"name": "BEC",
	"displayName": "BetterErrorsCompiler",
	"description": "a better errors compiler for OCaml, based on \"Getting Into The Flow: Better Type Error Messages for Constraint-Based Type Inference          \" ",
	"version": "0.0.1",
	"icon": "./hammer.png",
	"engines": {
		"vscode": "^1.89.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished",
		"onLanguage:ocaml"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "BEC.compileWithUtop",
				"title": "BE compile With Utop TopLevel",
				"category": "BEC"
			},
			{
				"command": "BEC.svelteTrial",
				"title": "BE Svelte webview trial",
				"category": "BEC"
			}
		],
		"keybindings": [
			{
				"command": "BEC.compileWithUtop",
				"key": "ctrl+alt+u",
				"mac": "cmd+opt+u",
				"when": "editorTextFocus"
			},
			{
				"command": "BEC.svelteTrial",
				"key": "ctrl+alt+s",
				"mac": "cmd+opt+s"
			}
		],
		"configuration": {
			"title": "BEC",
			"properties": {
				"BEC.requestsThisMinute": {
					"type": "number",
					"default": -1,
					"description": "Number of requests made this minute"
				},
				"BEC.requestsPerDay": {
					"type": "number",
					"default": -1,
					"description": "Number of requests made today"
				},
				"BEC.lastResetDate": {
					"type": "string",
					"default": "",
					"description": "Timestamp of the last reset"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "rollup -c && tsc -p ./",
		"watch-rollup": "rollup -c -w",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^14.0.0",
		"@rollup/plugin-node-resolve": "^8.0.0",
		"@rollup/plugin-typescript": "^6.0.0",
		"@tsconfig/svelte": "^1.0.0",
		"@types/mocha": "^8.0.0",
		"@types/vscode": "^1.51.0",
		"concurrently": "^5.3.0",
		"eslint": "^6.0.0",
		"mocha": "^8.1.3",
		"rollup": "^2.3.4",
		"rollup-plugin-svelte": "^6.0.0",
		"rollup-plugin-terser": "^7.0.2",
		"svelte": "^3.0.0",
		"svelte-check": "^1.0.0",
		"svelte-preprocess": "^4.0.0",
		"ts-loader": "^8.0.11",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"@google/generative-ai": "^0.11.5",
		"@types/node": "^20.14.2",
		"@types/node-fetch": "^2.6.11",
		"node": "^20.14.0",
		"node-fetch": "^3.3.2"
	}
}
